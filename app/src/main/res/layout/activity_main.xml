<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#EFECCA"
    tools:context="hu.geza.regexptester.app.MainActivity">

    <TextView
        android:id="@+id/pattern_tag"
        android:text="Pattern  "
        android:textStyle="bold"
        android:textColor="#669900"
        android:textSize="20sp"
        android:layout_alignBaseline="@+id/et_pattern"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <EditText
        android:singleLine="true"
        android:nextFocusDown="@+id/et_regexp"
        android:layout_marginLeft="10dp"
        android:paddingTop="64dp"
        android:id="@+id/et_pattern"
        android:textColor="#193441"
        android:layout_toRightOf="@id/pattern_tag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:paddingTop="128dp"
        android:id="@+id/rexexp_tag"
        android:text="Test text"
        android:textStyle="bold"
        android:textColor="#669900"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <EditText
        android:singleLine="true"
        android:nextFocusDown="@+id/btn_ok"
        android:layout_marginLeft="10dp"
        android:id="@+id/et_regexp"
        android:textColor="#193441"
        android:layout_alignBaseline="@id/rexexp_tag"
        android:layout_toRightOf="@id/rexexp_tag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:textSize="18dp"
        android:textColor="#046380"
        android:paddingTop="128dp"
        android:id="@+id/tv_output"
        android:layout_centerInParent="true"
        android:text="@string/hello_world"
        android:layout_below="@id/et_regexp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:onClick="check"
        android:layout_marginTop="164dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/et_regexp"
        android:text="check"
        android:id="@+id/btn_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>
